# Copy this file to .env and fill in real values. DO NOT commit .env to git.

# Server
PORT=5001

# MongoDB connection string (replace <user>, <pass>, <host>, <db>)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster-url>/<db>?retryWrites=true&w=majority

# JSON Web Token secret (use a secure long random string)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# Upstash Redis (if used)
# example: rediss://:password@eu1.upstash.io:6379
REDIS_URL=your_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token_here

# Optional provider credentials (placeholders)
# e.g. for Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Any other keys you use in app
SOME_API_KEY=your_api_key_here

# Notes:
# - Never store production credentials in the repository.
# - Keep the real `.env` file local or in a secure secrets manager.
# - You can use environment-specific files like `.env.development` locally but still ignore them.
